{
  "manifest_version": 3,
  "name": "NG Extension Manager",
  "version": "2.3.71",
  "description": "Your browserâ€™s new best friend. Manage your extensions with ease and say goodbye to clutter!",
  "homepage_url": "https://github.com/Nitra-Global/NG-Extension-Manager",
  "author": "UNBOUND LABEL",
  "permissions": [
    "storage",
    "management",
    "activeTab",
    "alarms",
    "downloads"
    ],
    "background": {
    "service_worker": "src/js/background.js" 
  },
  "action": {
    "default_popup": "src/html/popup.html",
    "default_icon": {
      "48": "public/icons/png/48x48.png",
      "128": "public/icons/png/128x128.png"
    }
  },
  "icons": {
    "48": "public/icons/png/48x48.png",
    "128": "public/icons/png/128x128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/js/content.js"]
    }
  ],
  "options_ui": {
    "page": "src/html/updates.html",
    "open_in_tab": true
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "ngde@web.de",
      "strict_min_version": "42.0"
    }
  }
}
